<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >


        <ImageView
            android:id="@+id/img"
            android:layout_width="150dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/corner1"
            android:layout_height="150dp"/>

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner1">


            <TextView
                android:id="@+id/t1"
                android:layout_width="120dp"
                android:text=" Name "
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_height="40dp" />


            <TextView
                android:id="@+id/tt1"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/t1" />


            <TextView
                android:id="@+id/t2"
                android:layout_width="120dp"
                android:layout_marginTop="5dp"
                android:text=" User Type "
                android:textStyle="bold"
                android:layout_below="@+id/t1"
                android:layout_height="40dp" />


            <TextView
                android:id="@+id/tt2"
                android:layout_width="230dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tt1"
                android:layout_marginLeft="20dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/t1" />

            <TextView
                android:id="@+id/t3"
                android:layout_width="120dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:text=" City "
                android:layout_below="@+id/t2"
                android:layout_height="40dp" />


            <TextView
                android:id="@+id/tt3"
                android:layout_width="230dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tt2"
                android:layout_marginLeft="20dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/t1" />

            <TextView
                android:id="@+id/t4"
                android:layout_width="120dp"
                android:layout_marginTop="5dp"
                android:text=" State "
                android:textStyle="bold"
                android:layout_below="@+id/t3"
                android:layout_height="40dp" />


            <TextView
                android:id="@+id/tt4"
                android:layout_width="230dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tt3"
                android:layout_marginLeft="20dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/t1" />

            <TextView
                android:id="@+id/t5"
                android:layout_width="120dp"
                android:layout_marginTop="5dp"
                android:text=" Catagory "
                android:textStyle="bold"
                android:layout_below="@+id/t4"
                android:layout_height="40dp" />


            <TextView
                android:id="@+id/tt5"
                android:layout_width="230dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tt4"
                android:layout_marginLeft="20dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/t1" />

            <TextView
                android:id="@+id/tcname"
                android:layout_width="120dp"
                android:layout_marginTop="5dp"
                android:text=" Contact Person"
                android:textStyle="bold"
                android:layout_below="@+id/t5"
                android:layout_height="40dp" />


            <TextView
                android:id="@+id/ttcname"
                android:layout_width="230dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tt5"
                android:layout_marginLeft="20dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/tcname" />

            <TextView
                android:id="@+id/tcpname"
                android:layout_width="120dp"
                android:layout_marginTop="5dp"
                android:text=" Company Name "
                android:textStyle="bold"
                android:layout_below="@+id/tcname"
                android:layout_height="40dp" />


            <TextView
                android:id="@+id/ttcpname"
                android:layout_width="230dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/ttcname"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/tcpname" />

            <TextView
                android:id="@+id/t6"
                android:layout_width="120dp"
                android:layout_marginTop="5dp"
                android:text=" Rating "
                android:textStyle="bold"
                android:layout_height="40dp"
                android:layout_below="@+id/tcpname" />



            <RatingBar
                android:id="@+id/tt6"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/ttcpname"
                android:layout_toRightOf="@+id/t6"
                android:layout_marginRight="-100dp"
                android:layout_marginBottom="-26dp"
                android:isIndicator="true"
                android:progressTint="#0064A8"
                android:numStars="5"
                android:scaleX=".5"
                android:scaleY=".5"
                android:theme="@style/RatingBar"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp" />


            <TextView
                android:id="@+id/t7"
                android:layout_width="120dp"
                android:layout_below="@+id/t6"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="5dp"
                android:text="Youtube Link"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_height="60dp"/>

            <TextView
                android:id="@+id/tt7"
                android:layout_width="230dp"
                android:layout_below="@+id/tt6"
                android:layout_toRightOf="@+id/t7"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_height="60dp"/>

            <TextView
                android:id="@+id/t8"
                android:layout_width="120dp"
                android:layout_marginTop="5dp"
                android:text=" Description "
                android:textStyle="bold"
                android:layout_below="@+id/t7"
                android:layout_height="100dp" />


            <TextView
                android:id="@+id/tt8"
                android:layout_width="230dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tt7"
                android:layout_height="100dp"
                android:layout_toRightOf="@+id/t1" />

            <RelativeLayout
                android:id="@+id/galaryphoto"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@+id/t8"
                android:layout_height="130dp">


                <TextView
                    android:id="@+id/tgallery"
                    android:layout_width="match_parent"
                    android:text="Gallery"
                    android:textStyle="bold"
                    android:layout_height="30dp"/>

                <ImageView
                    android:id="@+id/gal1"
                    android:layout_width="100dp"
                    android:layout_below="@+id/tgallery"
                    android:layout_marginLeft="3dp"
                    android:layout_height="100dp"/>

                <ImageView
                    android:id="@+id/gal2"
                    android:layout_width="100dp"
                    android:layout_below="@+id/tgallery"
                    android:layout_height="100dp"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/gal1"/>


                <ImageView
                    android:id="@+id/gal3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/tgallery"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/gal2"/>


            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/r2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/r1"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/ccheading"
                android:layout_width="match_parent"
                android:text=" Rating and  Comments "
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/corner1"
                android:layout_height="30dp" />



            <TextView
                android:id="@+id/ratt1"
                android:layout_width="120dp"
                android:layout_marginTop="10dp"
                android:text=" Rating "
                android:textStyle="bold"
                android:layout_height="40dp"
                android:layout_below="@+id/ccheading" />




            <RatingBar
                android:id="@+id/rr1"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_below="@+id/ccheading"
                android:layout_toRightOf="@+id/ratt1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="-100dp"
                android:layout_marginBottom="-26dp"
                android:progressTint="#0064A8"
                android:stepSize="1"
                android:numStars="5"
                android:scaleX=".5"
                android:scaleY=".5"
                android:theme="@style/RatingBar"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp" />


            <TextView
                android:id="@+id/ratt2"
                android:layout_width="80dp"
                android:layout_marginTop="5dp"
                android:text=" Comment "
                android:textStyle="bold"
                android:layout_below="@+id/ratt1"
                android:layout_height="wrap_content" />


            <EditText
                android:id="@+id/rr2"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rr1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="24dp"
                android:layout_toRightOf="@+id/ratt2" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/r3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/r2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >

            <Button
                android:id="@+id/button1"
                android:layout_width="150dp"
                android:gravity="center"
                android:layout_marginLeft="110dp"
                android:background="@drawable/buttonback"
                android:textColor="#FFFFFF"
                android:text="Submit"
                android:textStyle="bold"
                android:layout_height="40dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/r3"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/corner1"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="#673AB7"
                android:orientation="horizontal">

            </androidx.recyclerview.widget.RecyclerView>


        </RelativeLayout>


    </RelativeLayout>

</ScrollView>